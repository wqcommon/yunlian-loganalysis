<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yunlian.loganalysis.dao.TbTestDao">
    
    <select id="query" parameterType="java.util.Map" resultType="com.yunlian.loganalysis.po.TbTestPo">
        SELECT * FROM tb_test
        <where>
            <if test="id != null">
               AND id = #{id}
            </if>
            <if test="name != null">
                AND name LIKE concat('%',#{name},'%')
            </if>
            <if test="money != null">
                AND money >= #{money}
            </if>
        </where>
    </select>

    <insert id="insert" parameterType="com.yunlian.loganalysis.po.TbTestPo">
        INSERT INTO tb_test(name,money) VALUES
        (
          #{name},
          #{money}
        )
        <selectKey keyProperty="id" resultType="int" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
    </insert>
    
</mapper>